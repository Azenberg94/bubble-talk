<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_bubble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groupe6al2.bubbletalk.Activity.MyBubbleActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextMyBubbleName"
            android:hint="Nom"
            tools:ignore="HardcodedText" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextMyBubbleDescription"
            android:layout_weight="0.29"
            android:hint="Description"
            tools:ignore="HardcodedText,InefficientWeight" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="95dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/defaut_room"
                    android:id="@+id/imageViewMyBubble"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <Button
                android:text="Modifier l'icone de ma bulle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonUpdateAvatarMyBubble"
                android:layout_gravity="center_vertical"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Sauvegarder les modifications"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSaveMyBubble"
                tools:ignore="HardcodedText"
                android:layout_gravity="center"/>

            <Button
                android:text="Supprimer ma Bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/buttonDeleteMyBubble" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="81dp">

            <Button
                android:text="DÃ©marrer la Bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMyBubbleNearby"
                android:layout_weight="1"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:text="@string/aller_dans_la_bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMyBubbleGoToChat"
                android:layout_weight="1"
                tools:ignore="ButtonStyle" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
